# словарь заполнен по умолчанию
dict = {
   'apple':'яблоко',
   'bold':'жирный',
   'bus':'автобус',
   'cat':'кошка',
   'car':'автомобиль'
}


print('=' * 15, 'Словарь', '=' * 15)


# справка. Будет выведена по команде h
help_message = """
s - Поиск слова в словаре
a - Добавить новое слово
r - Удалить новое слово
k - Вывод всех слов
d - Вывод всего словаря
h - Справка
q - Выход
"""


choice = ''
while choice != 'q':
   choice = input('h - справка >> ')
   if choice == 's':
       word = input('Введите слово: ')
       res = dict.get(word, 'Такого слова нет в словаре.')
       print(res)
   elif choice == 'a':
       word = input('Введите слово: ')
       value = input('Введите перевод слова: ')
       dict[word] = value  # добавление в словарь ключ:значение
       print('Слово добавлено!')
   elif choice == 'r':
       word = input('Введите слово, которое хотите удалить: ')
       del dict[word]
       print('Слово ', word, ' успешно удалено.')
   elif choice == 'k':
       print(dict.keys())
   elif choice == 'd':
       for word in dict:
           print(word, ': ', dict[word])
   elif choice == 'h':
       print(help_message)
   elif choice == 'q':
       continue
   else:
       print('Нераспознанная команда. Введите h для вызова справки.')
